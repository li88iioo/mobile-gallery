# 应用配置
NODE_ENV=production  # 生产环境模式
PORT=3888            # 应用监听端口

# 安全配置
SESSION_SECRET=your-secret-key-change-me-in-production  # 会话密钥，生产环境务必修改
SESSION_MAX_AGE=86400000  # 会话有效期，24小时，单位毫秒

# 缓存配置
STATIC_CACHE_MAX_AGE_JS_CSS=86400  # JS和CSS文件缓存时间，1天，单位秒
STATIC_CACHE_MAX_AGE_IMAGES=604800  # 图片文件缓存时间，7天，单位秒

# 文件上传配置
MAX_FILE_SIZE=5242880  # 最大文件上传大小，5MB，单位字节

# 时区设置
TZ=Asia/Shanghai  # 服务器时区

# 允许的外部来源，多个域名用逗号分隔
ALLOWED_REFERER=mydomain.com,example.com
